{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript",
        "plugin:@typescript-eslint/recommended",
        "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "arrowFunctions": true,
            "no-console": true
        },
        "project": "./tsconfig.json"
    },
    "globals": {
        "NodeJS": true
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "react/jsx-filename-extension": [0],
        "class-methods-use-this": 0,
        "@typescript-eslint/unbound-method": 0,
        "no-await-in-loop": 0,
        "no-plusplus": 0,
        "no-continue": 0,
        "no-param-reassign": 0,
        "@typescript-eslint/no-throw-literal": 0,
        "import/prefer-default-export": 0,
        "consistent-return": 0,
        "import/no-cycle": 0,
        "no-restricted-syntax": 0,
        "linebreak-style": ["error", "windows"],
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "ts": "never"
            }
        ]
    },
    "ignorePatterns": ["*.js"],
    "settings": {
        "import/extensions": [".ts"],
        "import/resolver": {
            "typescript": {},
            "node": {
                "extensions": [".ts"],
                "moduleDirectory": ["node_modules", "src"]
            }
        }
    }
}